@model EvolucaoObra.Models.Obra

@{
    ViewData["Title"] = "Excluir Obra";
}

<h1>Excluir Obra</h1>

<h4>Tem certeza que deseja excluir esta obra?</h4>

<div class="mb-2"><strong>Nome:</strong> @Model.Nome</div>
<div class="mb-2"><strong>Respons√°vel:</strong> @Model.Responsavel</div>
<div class="mb-2"><strong>Status:</strong> @Model.Status</div>
<div class="mb-2"><strong>Etapa Atual:</strong> @Model.EtapaAtual</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
