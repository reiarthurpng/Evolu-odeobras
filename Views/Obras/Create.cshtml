@model EvolucaoObra.Models.Obra

@{
    ViewData["Title"] = "Nova Obra";
}

<h1>Nova Obra</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" value="@Model?.Nome"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco" class="form-label"></label>
        <input asp-for="Endereco" class="form-control" value="@Model?.Endereco"/>
    </div>

    <div class="mb-3">
        <label asp-for="Responsavel" class="form-label"></label>
        <input asp-for="Responsavel" class="form-control" value="@Model?.Responsavel"/>
    </div>

    <div class="mb-3">
        <label asp-for="DataInicio" class="form-label"></label>
        <input asp-for="DataInicio" class="form-control" type="date" 
               value="@(Model?.DataInicio.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"/>
    </div>

    <div class="mb-3">
        <label asp-for="DataTerminoPrevista" class="form-label"></label>
        <input asp-for="DataTerminoPrevista" class="form-control" type="date" 
               value="@(Model?.DataTerminoPrevista?.ToString("yyyy-MM-dd"))"/>
    </div>

    <div class="mb-3">
        <label asp-for="DataConclusao" class="form-label"></label>
        <input asp-for="DataConclusao" class="form-control" type="date" 
               value="@(Model?.DataConclusao?.ToString("yyyy-MM-dd"))"/>
    </div>

<div class="mb-3">
    <label asp-for="Status" class="form-label"></label>
    <input asp-for="Status" class="form-control" />
</div>


    <div class="mb-3">
        <label asp-for="EtapaAtual" class="form-label"></label>
        <input asp-for="EtapaAtual" class="form-control" value="@Model?.EtapaAtual"/>
    </div>

    <div class="mb-3">
        <label asp-for="Observacoes" class="form-label"></label>
        <textarea asp-for="Observacoes" class="form-control" rows="4">@Model?.Observacoes</textarea>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
